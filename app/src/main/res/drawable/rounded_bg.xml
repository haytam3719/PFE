<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <!-- Transparent background -->
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="12dp"/>
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp"/>
        </shape>
    </item>
    <!-- Field background -->
    <item>
        <shape android:shape="rectangle">
            <!-- Transparent background -->
            <solid android:color="@android:color/transparent"/>
            <!-- Indigo border color -->
            <stroke
                android:width="1dp"
                android:color="#4B0082"/> <!-- Adjusted to a shade of indigo -->
            <!-- Rounded corners -->
            <corners android:radius="12dp"/>
        </shape>
    </item>
</layer-list>
