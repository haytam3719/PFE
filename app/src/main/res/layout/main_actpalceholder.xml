<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="com.example.project.models.LogInUserPartial" />
        <import type="com.example.project.viewmodels.AuthViewModel" />
        <import type="com.example.project.viewmodels.BiometricViewModel" />
        <variable
            name="clientPartial"
            type="com.example.project.models.LogInUserPartial" />
        <variable
            name="viewModel"
            type="com.example.project.viewmodels.AuthViewModel" />
        <variable
            name="fingerPrintViewModel"
            type="com.example.project.viewmodels.AuthViewModel" />
    </data>


    <RelativeLayout
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!-- Material Card View -->
    <com.google.android.material.card.MaterialCardView
        style="?attr/materialCardViewElevatedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="70dp"
        android:padding="30dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/card"

        >

        <!-- RelativeLayout pour centrer les éléments -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"

            >

            <!-- TextInputLayout 1 -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textField1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="12dp"
                app:placeholderText="Test Placeholder 1"

                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:hint="Identifiant"
                    android:drawableStart="@drawable/some"
                    android:background="@drawable/rounded_bg"
                    android:drawablePadding="8dp"
                    android:text="@={clientPartial.email}"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!-- TextInputLayout 2 -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textField2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textField1"
                android:layout_centerHorizontal="true"
                android:paddingBottom="10dp"
                app:placeholderText="Test Placeholder 2"
                app:endIconMode="password_toggle"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:hint="Mot de passe"
                    android:drawableStart="@drawable/motpasse"
                    android:drawablePadding="8dp"
                    android:inputType="textPassword"
                    android:background="@drawable/rounded_bg"
                    android:text="@={clientPartial.password}"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/elevatedButton"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textField2"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:padding="15dp"
                android:onClick="@{view->viewModel.onButtonClick(view)}"
                android:text="Connexion" />

            <TextView
                android:id="@+id/clickableTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Identifiant ou mot de passe oublié ?"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:clickable="true"
                android:padding="25dp"
                android:layout_below="@id/elevatedButton"
                android:onClick="onTextViewClicked" />


        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/elevatedButton2"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/card"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:onClick="@{view->viewModel.onButtonClickOpen(view)}"
            android:padding="20dp"
            android:text="Ouvrir un compte" />

        <Button
            android:id="@+id/elevatedButton3"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/elevatedButton2"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:onClick="@{view->fingerPrintViewModel.onButtonClickAuth(view)}"
            android:padding="20dp"
            android:text="Connexion avec Empreinte" />

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        app:menu="@menu/bottom_navigation_menu"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
</layout>