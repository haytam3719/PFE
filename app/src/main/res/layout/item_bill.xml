<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/bill_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bill Number"
            android:layout_marginEnd="100dp"
            android:textColor="@color/teal"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/customSelector"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bill_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bill Amount"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bill_number" />

    <TextView
        android:id="@+id/bill_due_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Bill Due Date"
        android:textColor="@color/primary_orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bill_amount" />

    <View
        android:id="@+id/customSelector"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/bill_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bill_amount"
        app:layout_constraintStart_toStartOf="@+id/bill_amount"
        app:layout_constraintTop_toBottomOf="@+id/bill_amount" />

    </androidx.constraintlayout.widget.ConstraintLayout>
