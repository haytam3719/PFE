<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:title="Apparence"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/back"
            android:background="@color/reddish_orange" />

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/themeImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/light_dark"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout" />

    <TextView
        android:id="@+id/themeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mode clair / Mode sombre"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/themeImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/themeDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Choisissez un thÃ¨me afin d'optimiser votre confort visuel."
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/themeTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/darkModeImage"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:src="@drawable/light_dark_phone"
        android:contentDescription="light_dark"
        app:layout_constraintTop_toBottomOf="@id/themeDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.29" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.57" />

    <RadioButton
        android:id="@+id/light"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/darkModeImage"
        app:layout_constraintStart_toStartOf="@id/guideline35"
        android:button="@drawable/radio_button"
        android:checked="true"
        />

    <RadioButton
        android:id="@+id/dark"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/darkModeImage"
        app:layout_constraintStart_toStartOf="@id/guideline70"
        android:button="@drawable/radio_button"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
